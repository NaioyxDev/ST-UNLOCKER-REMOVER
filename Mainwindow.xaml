<Window x:Class="SteamUnlockerRemover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SteamUnlocker REMOVER" 
        Height="500" Width="560"
        WindowStartupLocation="CenterScreen"
        Background="#0A0E17"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Inputs -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
            <RowDefinition Height="*"/>    <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="SteamUnlocker REMOVER" 
                   Grid.Row="0"
                   Foreground="#3B82F6"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Input Section -->
        <Border Grid.Row="1"
                Background="#1E293B"
                CornerRadius="8"
                Padding="15"
                BorderBrush="#3B82F6"
                BorderThickness="1"
                Margin="0,0,0,15">
            <StackPanel>

                <!-- APP IDs -->
                <TextBlock Text="APP IDs:" 
                           Foreground="#93C5FD"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtAppIDs"
                         Background="#0F172A"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="8"
                         FontFamily="Consolas"
                         FontSize="13"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Height="35" 
                         Margin="0,0,0,12"/>

                <!-- Steam Path -->
                <TextBlock Text="STEAM PATH:" 
                           Foreground="#93C5FD"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="txtSteamPath"
                             Grid.Column="0"
                             Background="#0F172A"
                             Foreground="White"
                             Padding="8"
                             FontSize="13"
                             BorderThickness="0"
                             Text="C:\Program Files (x86)\Steam"/>
                    
                    <Button x:Name="BtnBrowse"
                            Grid.Column="1"
                            Content="BROWSE"
                            Width="90"
                            Height="35"
                            Margin="10,0,0,0"
                            Background="#1D4ED8"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="13"
                            Click="BtnBrowse_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button x:Name="btnRemove" 
                    Content="REMOVE GAME"
                    Width="150"
                    Height="40"
                    Background="#DC2626"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Margin="0,0,15,0"
                    Click="BtnRemove_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#F87171" BlurRadius="10" Opacity="0.7"/>
                </Button.Effect>
            </Button>

            <Button x:Name="btnRestartSteam" 
                    Content="RESTART STEAM"
                    Width="150"
                    Height="40"
                    Background="#2563EB"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Click="BtnRestartSteam_Click">
                <Button.Effect>
                    <DropShadowEffect Color="#3B82F6" BlurRadius="10" Opacity="0.7"/>
                </Button.Effect>
            </Button>
        </StackPanel>

        <!-- Activity Log -->
        <Border Grid.Row="3"
                Background="#1E293B"
                CornerRadius="8"
                Padding="10"
                BorderBrush="#3B82F6"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="ACTIVITY LOG:" 
                           Foreground="#93C5FD"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <Border Grid.Row="1"
                        Background="#0F172A"
                        CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtLogs"
                                   Foreground="White"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   Padding="8"
                                   TextWrapping="Wrap"
                                   Height="280"/> <!-- plus haut -->
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
